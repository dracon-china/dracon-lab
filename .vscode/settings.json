{
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true,
    "source.fixAll.eslint": true,
    "source.fixAll": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, pnpm-workspace.yaml, .yarnrc.yml, .npmrc, LICENSE",
    ".eslintrc.js": ".eslintrc.json, .eslintignore, .eslintcache",
    ".stylelintrc": ".stylelintrc.js, .stylelintignore",
    ".prettierrc.js": ".prettierrc.js, .prettierignore, .editorconfig",
    ".markdownlint.json": ".markdownlint.json, .markdownlintignore",
    ".commitlintrc": ".commitlintignore, .lintstagedrc",
    "Dockerfile": "Dockerfile, .dockerignore",
    "lerna.json": "nx.json",
    "tailwind.config.js": "tailwind.config.js, tailwind.css",
    ".fatherrc.base.ts": ".fatherrc.*"
  },
  "typescript.tsdk": "node_modules\\typescript\\lib"
}
