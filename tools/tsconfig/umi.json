{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Umi",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./src/.umi/*"]
    }
  },
  "include": ["**/*.tsx", "**/*.ts", ".umirc.ts"]
}
